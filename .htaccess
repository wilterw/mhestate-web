Options -MultiViews
RewriteEngine On
RewriteBase /

# --- CORRECCIÃ“N DEL BUCLE HTTPS ---
RewriteCond %{HTTP:X-Forwarded-Proto} !https
RewriteCond %{HTTPS} off
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# --- URLs LIMPIAS (Quitar .html visualmente) ---

# 1. Redirigir externamente (SEO) - EXCEPCIONES
# - No tocar carpeta components
# - No tocar contact.html (necesario para el modal)
RewriteCond %{REQUEST_URI} !^/components/ [NC]
RewriteCond %{REQUEST_URI} !^/contact\.html$ [NC]
RewriteCond %{THE_REQUEST} \s/+(.+?)\.html[\s?] [NC]
RewriteRule ^ /%1 [R=301,L]

# 2. Redirigir internamente (Para que Apache entienda)
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^([^\.]+)$ $1.html [NC,L]